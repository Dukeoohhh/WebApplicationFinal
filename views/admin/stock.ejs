            </tr>
          </table>
    
          <% for(var i=0; i < sauces.length; i +=4) { %>
            <table class="list">
              <tr>
                <% for (var j=0; j < 4; j++) { %>
      
                  <% var check = 0 %>
      
                  <% if(i + j>= sauces.length) { %>
