                          </tr>
                          <tr>
                            <td colspan="2">
                              <a class="name">
                                <%= toppings[i+j].topping_nameEN %>
                              </a>
                            </td>
                          </tr>
                        <form action="/administrator/stock/changeStatusTopping" method="post">
                          <input type="hidden" name="topping" id="topping-<%= i+j%>" value="<%= i+j+1%>"/>
                          <% if(toppings[i+j].topping_status == 1) { %>
                          <tr>
                            <td>
                                <button class="button-ready" name="submitBtn" type="submit" value="ready" style="vertical-align:middle">
                                    READY TO <br> SERVE
                                </button>
                            </td>
                            <td>
                              <button class="button" name="submitBtn" type="submit" value="outStock" style="vertical-align:middle">
                                  OUT OF <br> STOCK
